{{#if updatePostForm}}
<h3>Update "{{post.title}}" Blog Post</h3>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title:</label>
      {{input class="form-control" value=title id="title" placeholder=post.title}}
    </div>
    <div class="form-group">
      <label for="date">Date:</label>
      {{input class="form-control" type="date" value=date id="date" placeholder=post.date}}
    </div>
    <div class="form-group">
      <label for="image">Image URL:</label>
      {{input class="form-control" value=image id="image" placeholder="Update URL"}}
    </div>
    <div class="form-group">
      <label for="body">Body:</label>
      {{textarea class="form-control" value=body id="body" placeholder="Update body content"}}
    </div>

    <button class="btn btn-default" {{action 'updatePost' post}}>Save Blog Post</button>
  </form>
</div>
{{else}}
  <button class="btn btn-default" {{action 'updatePostForm'}}>Update This Post</button>
{{/if}}
