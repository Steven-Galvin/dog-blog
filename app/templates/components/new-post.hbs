{{#if addNewPost}}
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title:</label>
        {{input value=title id="title"}}
      </div>
      <div class="form-group">
        <label for="date">Date:</label>
        {{input type="date" value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="image">Image URL:</label>
        {{input value=image id="image"}}
      </div>
      <div class="form-group">
        <label for="body">Body:</label>
        {{input value=body id="body"}}
      </div>

      <button {{action 'savePost'}}>Save Blog Post</button>
    </form>
  </div>
{{else}}
  <button {{action 'postFormShow'}}>Add New Blog Post</button>
{{/if}}
