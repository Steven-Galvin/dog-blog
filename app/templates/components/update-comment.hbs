{{#if updateCommentForm}}
  <h6>Update your comment</h6>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Edit comment:</label>
        {{textarea class="form-control" value=content id="content"}}
      </div>
      <button class="btn btn-default" {{action 'updateComment' comment}}>Save Comment</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default" {{action 'updateCommentForm'}}>Edit Comment</button>
{{/if}}
